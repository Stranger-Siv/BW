# MongoDB connection string (e.g. mongodb://localhost:27017/bedwars or Atlas URI)
MONGO_URI=your_mongodb_uri

# NextAuth (generate a random string for NEXTAUTH_SECRET, e.g. openssl rand -base64 32)
NEXTAUTH_SECRET=your_secret_here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth: create at https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: http://localhost:3000/api/auth/callback/google (and your production URL)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# First admin: sign in with Google once, then in MongoDB set that user's role to "admin"
# (e.g. db.users.updateOne({ email: "you@gmail.com" }, { $set: { role: "admin" } }))

# Pusher (real-time): create app at https://dashboard.pusher.com â€” optional; if unset, real-time is disabled
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=us2
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=us2
